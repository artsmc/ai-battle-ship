# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Battleship Naval Strategy
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=0.1.0

# Database Configuration
DB_USER=battleship_user
DB_PASSWORD=battleship_pass
DB_NAME=battleship_db
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
DATABASE_POOL_MAX=20
DATABASE_POOL_MIN=5

# Electric SQL Configuration
ELECTRIC_SERVICE_URL=http://localhost:5133
ELECTRIC_DB_USER=electric
ELECTRIC_DB_PASSWORD=electric_pass
ELECTRIC_DATABASE_URL=postgresql://${ELECTRIC_DB_USER}:${ELECTRIC_DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
ELECTRIC_WRITE_TO_PG_MODE=logical_replication
ELECTRIC_AUTH_MODE=jwt
ELECTRIC_AUTH_JWT_ALG=HS256
ELECTRIC_AUTH_JWT_KEY=your_secure_jwt_key_here_change_in_production

# Redis Configuration (for session/cache)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:3000
WS_HEARTBEAT_INTERVAL=30000

# Development Configuration
NEXT_TELEMETRY_DISABLED=1
ANALYZE_BUNDLE=false
NEXT_PUBLIC_DEBUG_MODE=true

# Security Configuration
JWT_SECRET=your-jwt-secret-here-change-in-production
SESSION_SECRET=your-session-secret-here-change-in-production
CORS_ORIGIN=http://localhost:3000

# AI Integration (optional)
OPENAI_API_KEY=
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000

# Feature Flags
ENABLE_MULTIPLAYER=true
ENABLE_AI_OPPONENT=true
ENABLE_TUTORIAL_MODE=true
ENABLE_LEADERBOARD=true

# Monitoring (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
LOG_LEVEL=debug